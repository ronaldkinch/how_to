<p id="notice"><%= notice %></p>

<h1>Listing Steps for <%= @subject.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><strong><%= step.title %></strong></td>
        <td><%= step.detail %></td>
        <td><%= link_to 'Edit', edit_subject_step_path(@subject, step) %></td>
        <td><%= link_to 'Destroy', [@subject, step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_subject_step_path %> |
<%= link_to 'Back', @subject %>
